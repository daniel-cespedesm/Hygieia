pipeline {
  agent { label "Hygieia-node" }
  stages {
    stage('Build') {
      steps {
        sh 'mvn clean install'
      }
    }
    stage('Dockerize') {
      steps {
        sh 'docker-compose build'
      }
    }
    stage('Push files to dockerhub repo') {
      steps {
        sh 'docker login --username=dacesmo --password=Secu!3re'
        sh 'docker-compose push'
      }
    }
  }
}
